# EditorConfig - consistent formatting across editors
# https://editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.txt]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2
